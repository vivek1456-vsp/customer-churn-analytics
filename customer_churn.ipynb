import pandas as pd
import numpy as np

# Load dataset
df = pd.read_csv("churn.csv")

# Basic cleaning
df.drop_duplicates(inplace=True)
df.dropna(inplace=True)

# Convert tenure groups
df["Tenure_Group"] = pd.cut(
    df["tenure"],
    bins=[0,12,24,36,48,100],
    labels=["0-12","13-24","25-36","37-48","48+"]
)

# Overall churn rate
churn_rate = (df["Churn"] == "Yes").mean() * 100
print("Overall Churn Rate:", round(churn_rate,2), "%")

# Churn by Contract
contract_churn = df.groupby("Contract")["Churn"].apply(
    lambda x: (x=="Yes").mean()*100
)
print(contract_churn)

# Churn by Tenure
tenure_churn = df.groupby("Tenure_Group")["Churn"].apply(
    lambda x: (x=="Yes").mean()*100
)
print(tenure_churn)

# Service Impact
services = ["OnlineSecurity","TechSupport","InternetService"]

for col in services:
    print(f"\nChurn by {col}")
    print(
        df.groupby(col)["Churn"].apply(
            lambda x: (x=="Yes").mean()*100
        )
    )

# Save cleaned file
df.to_csv("churn_cleaned.csv", index=False)
